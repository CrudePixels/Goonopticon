{
  "manifest_version": 3,
  "name": "Goonopticon",
  "version": "2.0.2",
  "description": "Podawful Goonopticon tool for timestamping Youtube videos, Henchmen get to work!",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "HTML/popup.html",
    "default_icon": {
      "16": "Resources/icon-default.png",
      "32": "Resources/icon-default.png",
      "48": "Resources/icon-default.png",
      "128": "Resources/icon-default.png"
    }
  },
  "icons": {
    "16": "Resources/icon-16.png",
    "32": "Resources/icon-32.png",
    "48": "Resources/icon-48.png",
    "128": "Resources/icon-128.png"
  },
  "background": {
    "service_worker": "JS/bundle/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "JS/bundle/sidebar.bundle.js"
      ],
      "css": [
        "CSS/sidebar.bundle.css",
        "CSS/theme.css"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "Resources/sidebar.gif",
        "Resources/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "goonopticon@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}